{
  "swagger": "2.0",
  "info": {
    "title": "Todo API",
    "description": "My todo API",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/data/": {
      "get": {
        "description": "Get all products",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "description": "Create new todo",
        "parameters": [
          {
            "name": "text",
            "in": "body",
            "description": "New product data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Text"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Array of new todos",
            "schema": {
              "$ref": "#/definitions/Produts"
            }
          }
        }
      }
    },
    "/data/{id}": {
      "get": {
        "description": "Get product by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Existing todo ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Product with provided ID",
            "schema": {
              "$ref": "#/definitions/Product"
            }
          }
        }
      },
      "delete": {
        "description": "Remove existing product",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Existing product ID"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Array of new products or empty array",
            "schema": {
              "$ref": "#/definitions/Products"
            }
          }
        }
      },
      "put": {
        "description": "Update existing product",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Existing product ID"
          },
          {
            "name": "changes",
            "in": "body",
            "description": "Existing todo changes",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Changes"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Array of new todos",
            "schema": {
              "$ref": "#/definitions/Products"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Product": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "example": "61fe74debf41e29d1c209684"
        },
        "name": {
          "type": "string",
          "example": "HP EliteBook 750"
        },
        "price": {
          "type": "number",
          "example": 1350
        },
        "country": {
          "type": "string",
          "example": "USA"
        }
      }
    },
    "Products": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Product"
      }
    },
    "Text": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "ACER EliteBook 850"
        },
        "price": {
          "type": "number",
          "example": 1250
        },
        "country": {
          "type": "string",
          "example": "USA"
        }
      }
    },
    "Changes": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "ACER EliteBook 850"
        },
        "price": {
          "type": "number",
          "example": 1250
        },
        "country": {
          "type": "string",
          "example": "USA"
        }
      }
    }
  }
}